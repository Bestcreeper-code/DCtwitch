{
    "manifest_version": 2,
    "name": "My Twitch Extension",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.twitch.tv/*"],
            "js": ["ui.js"]
        }
    ],
    "permissions": ["activeTab"],
    "browser_action": {
        "default_popup": "config.html"
    },
    "host_permissions": ["http://127.0.0.1:8080/*"]
}
